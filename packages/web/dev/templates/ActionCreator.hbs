import {
	errorActionReducer,
	RETURN_SELF,
	REDUCE_TO_MAP,
} from '@utils';

const types = {
	start: 'topstitch.{{location}}.{{name}}.start',
	success: 'topstitch.{{location}}.{{name}}.success',
	fail: 'topstitch.{{location}}.{{name}}.fail',
};

export const {{name}}Reducer = {
	[types.start]: RETURN_SELF,
	[types.success]: (state, { response }) => ({
		...state,
	}),
	[types.fail]: errorActionReducer,
};

export const {{name}} = ({  }) => ({
	types: [types.start, types.success, types.fail],
	promise: ({ api }) => api.get(`/`),
});
